<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - FunWithBrandt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/Images/BlackHole.jpg" />
    <style>


        header {
            background-color: rgb(179, 224, 255);
        }
    </style>

</head>


<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 navbar-right justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" style="color:black" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  style="color:black" asp-area="" asp-page="/Blog">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  style="color:black" asp-area="" asp-page="/Books">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  style="color:black" asp-area="" asp-page="/Programs">Programs</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link" style="color:black" asp-area="" asp-page="/Graphs">Graphs</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" style="color:black" asp-area="" asp-page="/KnowledgeRepository">Knowledge Repository</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

        <div class="container">
            <div>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>


    <footer class="border-top footer">
        <div class="container">
            &copy; 2020 - FunWithBrandt
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
